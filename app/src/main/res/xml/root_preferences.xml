<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/dimension_title">


        <ListPreference
            app:defaultValue="temperature"
            app:entries="@array/temperature_values"
            app:entryValues="@array/temperature_values"
            app:key="temperature"
            app:title="@string/temperature_title"
            app:useSimpleSummaryProvider="true" />


        <ListPreference
            app:defaultValue="speed"
            app:entries="@array/speed_entries"
            app:entryValues="@array/speed_values"
            app:key="speed"
            app:title="@string/speed_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>